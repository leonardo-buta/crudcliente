@model CrudContatos.Sistema.Entidades.Cliente

@{
    ViewBag.Title = "Novo Cliente";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $(".somenteNumero").keypress(function (e) {
            if (e.which != 8 && e.which != 0 && e.which != 13 && (e.which < 48 || e.which > 57)) {
                return false;
            }
        });
    });
</script>

<h2>Novo Cliente</h2>

@if (ViewBag.ErroTelefone == true)
{
<!--Mensagem de erro -->
<div id="divErroTelefoneInvalido" class="alert alert-danger" role="alert">
    <strong>Atenção!</strong><br /> Telefone(s) inválidos.
</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <hr />
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group float-label-control">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <label for="nome">Nome</label>
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome" } })

                    </div>
                    <div class="form-group float-label-control">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <label for="telefones">Telefones (Um por linha)</label>
                        @Html.EditorFor(model => model.Telefones, new { htmlAttributes = new { @class = "form-control somenteNumero", placeholder = "Telefones (Um por linha)" , @type = "number" ,rows = 5} })
                    </div>
                    <div class="form-group float-label-control">
                        <label for="email">Email</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                    </div>
                </div>
                <br />
            </div>
            <br />
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group">
                    <div class="col-md-2">
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    </div>
                    <div class="col-sm-2">
                        @Html.ActionLink("Voltar", "ListagemClientes", "Cliente", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}