<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/CrudContatos.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">Cadastro de Cliente</a>
    </div>
    <div class="row panel">
        <div id="menu" class="col-xs-3">
            <div class="row">
                <div class="col-xs-6">
                    @Html.ActionLink("Lista de Clientes", "ListagemClientes", "Cliente", null, new { @class = "btn btn-default btn-md btn-block" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    @Html.ActionLink("Novo Cliente", "CadastroCliente", "Cliente", null, new { @class = "btn btn-default btn-md btn-block" })
                </div>
            </div>
        </div>
        <div id="categorias" class="col-xs-8">
            @RenderBody()
        </div>
    </div>
</body>
</html>